.mask
	width:100%
	height:100%
	min-height:100%
	top 0
	left 0
	transform scaleX(0)
	background #ff5660
	position fixed
	z-index 1000

iframe.xp
	z-index 500
	top 0
	left 0
	position fixed
	width 100%
	height 100%
	min-height 100%
	overflow hidden

#next
	position absolute
	z-index 750
	right 25px
	top 25px
	width 25px
	height 16px
	cursor pointer
	background url(../img/next.png) no-repeat center center
	background-size 90% 90%
	opacity 0.7
	transition: opacity .2s ease-in-out
	&:hover
		opacity .9

#prev
	position absolute
	z-index 750
	right 25px
	top 50px
	width 25px
	height 16px
	cursor pointer
	background url(../img/prev.png) no-repeat center center
	background-size 90% 90%
	opacity 0.7
	transition: opacity .2s ease-in-out
	&:hover
		opacity .9

#logo
	position absolute
	cursor pointer
	z-index 751
	top 25px
	left 50%
	width 44px
	height 50px
	margin-left -22px
	background url(../img/logo.png) no-repeat center center
	background-size 90% 90%
	opacity 0.4
	transition: opacity .5s ease-in-out
	&:hover
		opacity .9

@media (max-width: 480px),(max-height: 380px)

	#logo
		top 5px
		width 22px
		height 25px
		margin-left -11px
	#next
		top 5px
	#prev
		top 5px
		left 25px
